{
    "manifest_version": 3,
    "name": "AniList-Player",
    "version": "1.0",
    "description": "AniList-Player",
    "icons": {
        "16": "res/imgs/icons/icon16.png",
        "48": "res/imgs/icons/icon48.png",
        "128": "res/imgs/icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "res/imgs/icons/icon16.png",
            "48": "res/imgs/icons/icon48.png",
            "128": "res/imgs/icons/icon128.png"
        },
        "default_popup": "src/popup/Popup.html"
    },
    "host_permissions": [
        "https://anilist.co/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://anilist.co/*"
            ],
            "js": [
                "dist/Main.js"
            ]
        }
    ]
}